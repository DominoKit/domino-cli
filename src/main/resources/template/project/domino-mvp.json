{
  "name": "${name}",
  "files": [
    {
      "name": "pom.xml",
      "template": "app/mvp/pom.vm"
    },
    {
      "name": "README.md",
      "template": "app/mvp/README.vm"
    }
  ],
  "folders": [
    {
      "name": ".idea",
      "folders": [
        {
          "name": "runConfigurations",
          "files": [
            {
              "name": "ALL_TESTS.xml",
              "template": "app/mvp/runConfigurations/ALL_TESTS.xml"
            },
            {
              "name": "${name}.xml",
              "template": "app/mvp/runConfigurations/app.vm"
            },
            {
              "name": "${name}-dev.xml",
              "template": "app/mvp/runConfigurations/app-dev.vm"
            },
            {
              "name": "Development.xml",
              "template": "app/mvp/runConfigurations/Development.xml"
            },
            {
              "name": "js_debug.xml",
              "template": "app/mvp/runConfigurations/js_debug.xml"
            },
            {
              "name": "process_sources.xml",
              "template": "app/mvp/runConfigurations/process_sources.xml"
            },
            {
              "name": "super_dev_mode.xml",
              "template": "app/mvp/runConfigurations/super_dev_mode.xml"
            }
          ]
        }
      ]
    },
    {
      "name": "${name}-backend",
      "files": [
        {
          "name": "pom.xml",
          "template": "app/mvp/backend/pom.vm"
        }
      ],
      "folders": [
        {
          "name": "src.main.resources",
          "files": [
            {
              "name": "config.json",
              "template": "app/mvp/backend/config.json"
            }
          ],
          "folders": [
            {
              "name": "app",
              "files": [
                {
                  "name": "favicon.ico",
                  "type": "RESOURCE",
                  "template": "app/mvp/backend/favicon.ico"
                },
                {
                  "name": "index.html",
                  "template": "app/mvp/backend/index.vm"
                },
                {
                  "name": "${name}.css",
                  "template": "app/mvp/backend/app.css"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "name": "${name}-frontend",
      "files": [
        {
          "name": "pom.xml",
          "template": "app/mvp/frontend/pom.vm"
        }
      ],
      "folders": [
        {
          "name": "src",
          "folders": [
            {
              "name": "main",
              "files": [
                {
                  "name": "module.gwt.xml",
                  "template": "app/mvp/frontend/module.gwt.vm"
                }
              ],
              "folders": [
                {
                  "name": "java.${rootPackage}",
                  "files": [
                    {
                      "name": "AppClientModule.java",
                      "template": "app/mvp/frontend/AppClientModule.java"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}